<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Row 1: Partner Name and Total Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Partner Name (Left) -->
            <TextView
                android:id="@+id/textViewPartnerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mr. Mahdi Bazzoun"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1" />

            <!-- Total Amount (Right) -->
            <TextView
                android:id="@+id/textViewTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALL1,500.00"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Row 2: Invoice Date, Bullet, Invoice Number and Due Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- Invoice Date -->
            <TextView
                android:id="@+id/textViewInvoiceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06 Dec 2025"
                android:textColor="#757575"
                android:textSize="14sp" />

            <!-- Bullet Separator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ "
                android:textColor="#757575"
                android:textSize="14sp" />

            <!-- Invoice Number -->
            <TextView
                android:id="@+id/textViewInvoiceNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="INV-000001"
                android:textColor="#757575"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1" />

            <!-- Due Amount (Right) -->
            <TextView
                android:id="@+id/textViewDueAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due: ALL1,500.00"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Row 3: Quantity/Items Count -->
        <TextView
            android:id="@+id/textViewQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#757575"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Row 4: Overdue Status (Conditional - Only shows if overdue) -->
        <TextView
            android:id="@+id/textViewOverdueStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OVERDUE BY 3 DAYS"
            android:textColor="#D32F2F"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>