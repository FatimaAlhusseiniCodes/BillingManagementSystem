<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordPaymentFragment">

    <TextView
        android:id="@+id/tvCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Name *"
        android:textColor="#1976D2"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etCustomer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Start typing to select a Customer"
        android:inputType="textPersonName"
        android:imeOptions="actionDone"
        android:background="@android:color/transparent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvCustomer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAdd" />

    <ImageView
        android:id="@+id/btnAdd"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_input_add"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/etCustomer"
        app:layout_constraintTop_toTopOf="@id/etCustomer"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/etCustomer"
        app:layout_constraintStart_toStartOf="@id/etCustomer"
        app:layout_constraintEnd_toEndOf="@id/etCustomer" />

</androidx.constraintlayout.widget.ConstraintLayout>