<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Login Fragment -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.billingmanagementsystem.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.billingmanagementsystem.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <!-- Invoice Fragment -->
    <fragment
        android:id="@+id/invoiceFragment"
        android:name="com.example.billingmanagementsystem.InvoiceFragment"
        android:label="Invoices"
        tools:layout="@layout/fragment_invoice">

        <action
            android:id="@+id/action_invoiceFragment_to_addInvoiceFragment"
            app:destination="@id/addInvoiceFragment" />
    </fragment>

    <!-- Add Invoice Fragment -->
    <fragment
        android:id="@+id/addInvoiceFragment"
        android:name="com.example.billingmanagementsystem.AddInvoiceFragment"
        android:label="New Invoice"
        tools:layout="@layout/fragment_add_invoice">

    <!--  <action
       android:id="@+id/action_addInvoiceFragment_to_addPartnerFragment"
       app:destination="@id/addPartnerFragment" /> -->
</fragment>

<!-- Partner Fragment -->
