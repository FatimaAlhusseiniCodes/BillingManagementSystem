<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- ==================== HOME ==================== -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.billingmanagementsystem.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <!-- Actions FROM Home TO other pages -->
        <action
            android:id="@+id/action_home_to_addInvoice"
            app:destination="@id/addInvoiceFragment" />

        <action
            android:id="@+id/action_home_to_addPartner"
            app:destination="@id/addPartnerFragment" />

        <action
            android:id="@+id/action_home_to_addExpense"
            app:destination="@id/addExpenseFragment" />

        <action
            android:id="@+id/action_home_to_addIncome"
            app:destination="@id/addIncomeFragment" />
    </fragment>

    <!-- ==================== INVOICES ==================== -->
    <fragment
        android:id="@+id/invoicesFragment"
        android:name="com.example.billingmanagementsystem.InvoiceFragment"
        android:label="Invoices"
        tools:layout="@layout/fragment_invoice">

        <!-- Action FROM Invoices TO Add Invoice -->
        <action
            android:id="@+id/action_invoices_to_addInvoice"
            app:destination="@id/addInvoiceFragment" />
    </fragment>

    <fragment
        android:id="@+id/addInvoiceFragment"
        android:name="com.example.billingmanagementsystem.AddInvoiceFragment"
        android:label="Add Invoice"
        tools:layout="@layout/fragment_add_invoice" >

        <!-- Action to Add Partner from Invoice screen -->
        <action
            android:id="@+id/action_addInvoice_to_addPartner"
            app:destination="@id/addPartnerFragment" />
    </fragment>

    <!-- ==================== PARTNERS ==================== -->
    <fragment
        android:id="@+id/partnersFragment"
        android:name="com.example.billingmanagementsystem.PartnersFragment"
        android:label="Partners"
        tools:layout="@layout/fragment_partners">

        <!-- Action FROM Partners TO Add Partner -->
        <action
            android:id="@+id/action_partners_to_addPartner"
            app:destination="@id/addPartnerFragment" />
    </fragment>

    <fragment
        android:id="@+id/addPartnerFragment"
        android:name="com.example.billingmanagementsystem.AddPartnerFragment"
        android:label="Add Partner"
        tools:layout="@layout/fragment_add_partner" />

    <!-- ==================== INCOMES ==================== -->
    <fragment
        android:id="@+id/incomesFragment"
        android:name="com.example.billingmanagementsystem.IncomesFragment"
        android:label="Incomes"
        tools:layout="@layout/fragment_incomes">

        <!-- Action FROM Incomes TO Add Income -->
        <action
            android:id="@+id/action_incomes_to_addIncome"
            app:destination="@id/addIncomeFragment" />
    </fragment>

    <fragment
        android:id="@+id/addIncomeFragment"
        android:name="com.example.billingmanagementsystem.AddIncomeFragment"
        android:label="Add Income"
        tools:layout="@layout/fragment_add_income" />

    <!-- ==================== EXPENSES ==================== -->
    <fragment
        android:id="@+id/expensesFragment"
        android:name="com.example.billingmanagementsystem.ExpensesFragment"
        android:label="Expenses"
        tools:layout="@layout/fragment_expenses">

        <!-- Action FROM Expenses TO Add Expense -->
        <action
            android:id="@+id/action_expenses_to_addExpense"
            app:destination="@id/addExpenseFragment" />
    </fragment>

    <fragment
        android:id="@+id/addExpenseFragment"
        android:name="com.example.billingmanagementsystem.AddExpenseFragment"
        android:label="Add Expense"
        tools:layout="@layout/fragment_add_expense" />

    <!-- ==================== SETTINGS ==================== -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.billingmanagementsystem.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>