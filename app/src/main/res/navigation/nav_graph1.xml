<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/paymentsReceivedFragment">

    <fragment
        android:id="@+id/paymentsReceivedFragment"
        android:name="com.example.paymentsnavapp.PaymentsReceivedFragment"
        android:label="Payments Received"
        tools:layout="@layout/fragment_payments_received" >
    <action
        android:id="@+id/action_payments_to_record"
        app:destination="@id/recordPaymentFragment" />
    </fragment>

    <fragment
        android:id="@+id/recordPaymentFragment"
        android:name="com.example.paymentsnavapp.RecordPaymentFragment"
        android:label="Record Payment"
        tools:layout="@layout/fragment_record_payment" />
</navigation>
